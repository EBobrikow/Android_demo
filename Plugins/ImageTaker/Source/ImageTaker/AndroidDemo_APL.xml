		<insert>
      <![CDATA[
      
       if (requestCode == 100 && resultCode == RESULT_OK) {          
            final String dataString = data.getDataString();
            final Uri imageUri = data.getData();
            final String path = imageUri.getPath();
            if (!dataString.isEmpty())
            {
							imagePicked(path);
            }                    
